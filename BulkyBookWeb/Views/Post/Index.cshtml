@model IEnumerable<Category>
@{
    ViewData["Title"] = "Snore Posts";
}

@* <h1>Index Category</h1> *@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Snore Posts</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Post
            </a> 
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        @* <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr> *@
        <tr class="table-primary">
            <th scope="col">
                Post
            </th>
            <th scope="col">
                Posted By
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.Reverse())
        {
            <tr class="table-secondary">
                <td width="50%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Post" asp-action="Edit" asp-route-id="@obj.Id" 
                        class="btn btn-primary mx-0"> <i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-150 btn-group" role="group">
                        <a asp-controller="Post" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-0"> <i class="bi bi-trash3"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

